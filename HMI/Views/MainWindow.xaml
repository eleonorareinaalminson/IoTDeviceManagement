<Window x:Class="HMI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:HMI.Views"
        mc:Ignorable="d"
        Title="IoT Device Management - HMI" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource LightGray}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Logo Icon -->
                    <TextBlock FontFamily="{StaticResource FontAwesome}"
                               Text="&#xf0c0;" 
                               FontSize="32"
                               Foreground="White"
                               Margin="0,0,15,0"
                               VerticalAlignment="Center"/>

                    <StackPanel>
                        <TextBlock Text="IoT Device Management System" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="Human Machine Interface (HMI)" 
                                   FontSize="14" 
                                   Foreground="#BDC3C7" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Ellipse Width="12" 
                             Height="12" 
                             Fill="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}" 
                             Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="White" 
                               FontSize="14"
                               Margin="0,0,15,0"/>

                    <!-- Refresh Button med Icon -->
                    <Button Command="{Binding RefreshDevicesCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="{StaticResource FontAwesome}"
                                       Text="&#xf021;" 
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Refresh" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Devices Section -->
            <Border Grid.Column="0" 
                    Style="{StaticResource Card}" 
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header med Icon -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock FontFamily="{StaticResource FontAwesome}"
                                   Text="&#xf233;" 
                                   FontSize="20"
                                   Foreground="{StaticResource PrimaryColor}"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Connected Devices" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Devices}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <views:DeviceCardView DataContext="{Binding}" 
                                                         Margin="0,0,0,15"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Alarms Section -->
                <Border Grid.Row="0" 
        Style="{StaticResource Card}" 
        Margin="10,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header med Icon -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock FontFamily="{StaticResource FontAwesome}"
                       Text="&#xf071;" 
                       FontSize="18"
                       Foreground="{StaticResource DangerColor}"
                       Margin="0,0,8,0"
                       VerticalAlignment="Center"/>
                            <TextBlock Text="Active Alarms" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource DangerColor}"
                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Alarms}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF3E0" 
                                BorderBrush="{StaticResource WarningColor}" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="10" 
                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{Binding DeviceName}" 
                                           FontWeight="Bold" 
                                           FontSize="13"/>

                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Severity}" 
                                           FontSize="11" 
                                           Foreground="{StaticResource DangerColor}"
                                           FontWeight="Bold"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding Message}" 
                                           TextWrapping="Wrap" 
                                           Margin="0,5,0,5"
                                           FontSize="12"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" 
                                           FontSize="10" 
                                           Foreground="{StaticResource DarkGray}"/>

                                                <!-- FIXAD ACK BUTTON -->
                                                <Button Grid.Row="2" Grid.Column="1"
                                        Command="{Binding DataContext.AcknowledgeAlarmCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Padding="8,3"
                                        FontSize="10">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock FontFamily="{StaticResource FontAwesome}"
                                                   Text="&#xf00c;" 
                                                   FontSize="10"
                                                   Margin="0,0,3,0"/>
                                                        <TextBlock Text="ACK"/>
                                                    </StackPanel>
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource SuccessButton}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsAcknowledged}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- History Section -->
                <Border Grid.Row="1" 
                        Style="{StaticResource Card}" 
                        Margin="10,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header med Icon -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock FontFamily="{StaticResource FontAwesome}"
                                       Text="&#xf080;" 
                                       FontSize="18"
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Event History" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding History}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" 
                                                BorderBrush="{StaticResource LightGray}" 
                                                BorderThickness="0,0,0,1" 
                                                Padding="8,5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" 
                                                           FontSize="11" 
                                                           Foreground="{StaticResource DarkGray}"
                                                           Margin="0,0,10,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Event}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="11"/>
                                                    <TextBlock Text="{Binding Details}" 
                                                               FontSize="10" 
                                                               Foreground="{StaticResource DarkGray}"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryColor}" 
                Padding="20,10">
            <TextBlock Text="© 2025 IoT Device Management System | Azure Service Bus Integration" 
                       Foreground="#BDC3C7" 
                       HorizontalAlignment="Center"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
