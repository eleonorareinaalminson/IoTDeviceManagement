<UserControl x:Class="HMI.Views.DeviceCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">

    <Border Background="White" 
            BorderBrush="{StaticResource LightGray}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Device Icon -->
            <Border Grid.Column="0" 
                    Width="80" 
                    Height="80" 
                    Background="{StaticResource LightGray}" 
                    CornerRadius="40" 
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                <TextBlock Text="{Binding Type, StringFormat='🔧 {0}'}" 
                           FontSize="32" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Device Info -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding Name}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryColor}"/>

                <TextBlock Text="{Binding DeviceId}" 
                           FontSize="12" 
                           Foreground="{StaticResource DarkGray}" 
                           Margin="0,2,0,8"/>

                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" 
                             Height="10" 
                             Fill="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}" 
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding State}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="{Binding StatusText}" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource SecondaryColor}" 
                           Margin="0,5,0,0"/>

                <TextBlock Text="{Binding LastSeen, StringFormat='Last seen: {0:HH:mm:ss}'}" 
                           FontSize="11" 
                           Foreground="{StaticResource DarkGray}" 
                           Margin="0,3,0,0"/>
            </StackPanel>

            <!-- Controls -->
            <StackPanel Grid.Column="2" 
                        VerticalAlignment="Center" 
                        Margin="20,0,0,0">

                <Button Content="▶ START" 
                        Command="{Binding StartCommand}"
                        Style="{StaticResource SuccessButton}"
                        Width="100"
                        Margin="0,0,0,8"/>

                <Button Content="⏹ STOP" 
                        Command="{Binding StopCommand}"
                        Style="{StaticResource DangerButton}"
                        Width="100"
                        Margin="0,0,0,8"/>

                <Slider Value="{Binding CurrentValue}" 
                        Minimum="0" 
                        Maximum="10" 
                        TickFrequency="0.5" 
                        IsSnapToTickEnabled="True"
                        Width="100"
                        Margin="0,5,0,0"
                        IsEnabled="{Binding IsRunning}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
