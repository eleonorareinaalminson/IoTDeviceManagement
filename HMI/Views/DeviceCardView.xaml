<UserControl x:Class="HMI.Views.DeviceCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enums="clr-namespace:Shared.Enums;assembly=Shared"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">


    <Border Background="White" 
            BorderBrush="{StaticResource LightGray}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Width="80" 
                    Height="80" 
                    Background="{StaticResource LightGray}" 
                    CornerRadius="40" 
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                <Grid>
                    <TextBlock FontFamily="{StaticResource fa-solid}"
                               Text="&#xf863;" 
                               FontSize="40"
                               Foreground="{StaticResource SecondaryColor}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:DeviceType.Fan}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock FontFamily="{StaticResource fa-solid}"
                               Text="&#xf0eb;" 
                               FontSize="40"
                               Foreground="#F39C12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:DeviceType.Lamp}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock FontFamily="{StaticResource fa-solid}"
                               Text="&#xf2c9;" 
                               FontSize="40"
                               Foreground="#E74C3C"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:DeviceType.TemperatureSensor}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock FontFamily="{StaticResource fa-solid}"
                               Text="&#xf013;" 
                               FontSize="40"
                               Foreground="{StaticResource DarkGray}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:DeviceType.Unknown}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding Name}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryColor}"/>

                <TextBlock Text="{Binding DeviceId}" 
                           FontSize="12" 
                           Foreground="{StaticResource DarkGray}" 
                           Margin="0,2,0,8"/>

                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" 
                             Height="10" 
                             Fill="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}" 
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding State}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="{Binding StatusText}" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource SecondaryColor}" 
                           Margin="0,5,0,0"/>

                <TextBlock Text="{Binding LastSeen, StringFormat='Last seen: {0:HH:mm:ss}'}" 
                           FontSize="11" 
                           Foreground="{StaticResource DarkGray}" 
                           Margin="0,3,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="2" 
                        VerticalAlignment="Center" 
                        Margin="20,0,0,0">

                <Button Command="{Binding StartCommand}"
                        Style="{StaticResource SuccessButton}"
                        Width="100"
                        Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="{StaticResource fa-solid}"
                                   Text="&#xf04b;" 
                                   FontSize="12"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="START" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding StopCommand}"
                        Style="{StaticResource DangerButton}"
                        Width="100"
                        Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="{StaticResource fa-solid}"
                                   Text="&#xf04d;" 
                                   FontSize="12"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="STOP" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Slider x:Name="SpeedSlider"
                    Value="{Binding CurrentValue, Mode=OneWay}" 
                    Minimum="0.1" 
                    Maximum="3.0" 
                    TickFrequency="0.1" 
                    IsSnapToTickEnabled="True"
                    Width="100"
                    Margin="0,5,0,0"
                    IsEnabled="{Binding IsRunning}"
                    PreviewMouseUp="SpeedSlider_MouseUp"
                    ToolTip="{Binding CurrentValue, StringFormat='Speed: {0:F1}'}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
